<%= render 'shared/navbar' %>
<div class="main-container">
  <div class="container">
    <h1>Mes Voyages</h1>
    <div class="container-trips">
      <% @trips.each do |trip| %>
        <div class="card-trip">
          <%= image_tag "domaine_detente.png" %>
          <div class="card-trip-details">
            <h3><%= trip.address %>â‚¬</h3>
          </div>
          <div class="card-trip-dates">
            <p> Start : <%= trip.start_date %></p>
            <p> End : <%= trip.end_date %></p>
          </div>
          <div class="card-button">
            <p>
              <%= link_to "Modifier mon voyage",  edit_trip_path(trip), class: "btn btn-outline-info btn-sm" %>
            </p>
          </div>
        </div>
      <% end %>
    </div>

    <div class="container-trips">
      <%= link_to "Page d'accueil",  root_path, class: "btn btn-primary"  %>
    </div>
  </div>
</div>
